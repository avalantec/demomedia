<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <!-- Inherit Form view -->

 <record id="website_hr_recruitment_index_inherit" model="ir.ui.view">

   <field name="name">Jobs Inherit Hide Date Update</field>
   <!-- <field name="model">website_hr_recruitment</field> -->

   <field name="inherit_id" ref="website_hr_recruitment.index"/>
   <field name="key">website_hr_recruitment.index.inherit</field>
   <field name="priority">98</field>
   <field name="arch" type="xml">
       <xpath expr="//div[@class='o_job_infos mt16']" position="replace">
       </xpath>
   </field>

 </record>

  <record id="s_snipped_options_recruitment_timestamp" model="ir.ui.view">
     <field name="name">s_snipped_options_recruitment_timestamp</field>
     <field name="key">website.snipped_options_recruitment_timestamp</field>
     <field name="inherit_id" ref="website.snippet_options"/>
     <field name="priority">98</field>
     <field name="arch" type="xml">
        <xpath expr="//div[@data-js='OptionsTab']/we-checkbox" position="after">
            <we-checkbox string="Recruitment Timestamp"
                data-customize-website-views="website_hr_recruitment.index.inherit|"
                data-reload="/"/>
        </xpath>    
     </field>
   </record>
 
</odoo>
